server {
    server_name tracking-api.medicaretech.io.vn;

    root /var/www/html;

    location / {
            proxy_pass http://localhost:8001;
            proxy_http_version 1.1;

            # Hỗ trợ nâng cấp kết nối cho WebSocket trên mọi đường dẫn
            # Nâng cấp kết nối chỉ khi client yêu cầu
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;

            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # Tăng timeout cho kết nối dài
            proxy_read_timeout 3600s;
            proxy_send_timeout 3600s;
            proxy_connect_timeout 3600s;

            # Tắt buffering cho dữ liệu real-time
            proxy_buffering off;
        }


    location ~ /.well-known {
        allow all;
    }

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-XSS-Protection "1; mode=block";
    add_header X-Content-Type-Options "nosniff";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/tracking-api.medicaretech.io.vn/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/tracking-api.medicaretech.io.vn/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = tracking-api.medicaretech.io.vn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name tracking-api.medicaretech.io.vn;
    return 404; # managed by Certbot


}