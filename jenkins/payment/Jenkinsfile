pipeline {
    agent any
    
    tools {
        python 'Python3.11'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'hxn203',
                    url: 'git@github.com:dxnghxn203/KLTN_2025.git'
            }
        }

        stage('Setup Environment') {
            steps {
                dir('tracking-manager/packages/payment') {
                    sh '''
                        python -m venv venv
                        . venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Lint') {
            steps {
                dir('tracking-manager/packages/payment') {
                    sh '''
                        . venv/bin/activate
                        pylint *.py || true
                        black --check . || true
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                dir('tracking-manager/packages/payment') {
                    sh '''
                        . venv/bin/activate
                        python -m pytest --junitxml=test-results/junit.xml
                    '''
                }
            }
        }

        stage('Build') {
            steps {
                dir('tracking-manager/packages/payment') {
                    script {
                        docker.build("payment-service:${BUILD_NUMBER}")
                    }
                }
            }
        }

        stage('Deploy') {
            when { branch 'main' }
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh """
                        ssh -o StrictHostKeyChecking=no ec2-user@46.137.203.192 '\
                            cd ~/app && \
                            docker-compose stop payment && \
                            docker-compose rm -f payment && \
                            echo "PAYMENT_IMAGE=payment-service:${BUILD_NUMBER}" >> .env && \
                            docker-compose up -d payment'
                    """
                }
            }
        }
    }

    post {
        always {
            junit '**/test-results/junit.xml'
            cleanWs()
        }
    }
}
